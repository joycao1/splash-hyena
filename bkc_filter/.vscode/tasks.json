{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "make debug",
            "type": "shell",
            "command": "make clean && make debug",
            "problemMatcher": [],
            "group": {
              "kind": "build",
              "isDefault": true
            }
          },

          {
            "label": "make and make clean",
            "type": "shell",
            "command": "make clean && make",
            "problemMatcher": [],
            "group": {
              "kind": "build",
              "isDefault": true
            }
          }
    ],
    "version": "2.0.0"
}